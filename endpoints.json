{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 6,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "url from the article...",
          "comment_count": 6
        }
      ]
    }
  },
  "POST /api/articles": {
    "description": "add a new article",
    "queries": [],
    "requestBody": {
      "author": "string",
      "title": "string",
      "body": "string",
      "topic": "string",
      "article_img_url": "string"
    },
    "exampleResponse": {
      "article": {
        "article_id": 7,
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article...",
        "created_at": "2024-11-30T15:59:13.341Z",
        "votes": 0,
        "article_img_url": "deafult url if not provided",
        "comment_count": 0
      }
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an object of an article",
    "queries": [],
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "article_img_url": "url from the article..."
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates an article's vote",
    "queries": [],
    "requestBody": {
      "inc_votes": "number"
    },
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 1,
        "article_img_url": "url from the article..."
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments for an article",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 1,
          "votes": 0,
          "created_at": "2018-05-30T15:59:13.341Z",
          "author": "weegembump",
          "body": "Text from the article..",
          "article_id": 6
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "add a comment for an article and responds with the posted comment",
    "queries": [],
    "requestBody": {
      "username": "string",
      "body": "string"
    },
    "exampleResponse": {
      "comment": {
        "comment_id": 333,
        "body": "Text from the article..",
        "article_id": 6,
        "author": "weegembump",
        "votes": 0,
        "created_at": "2024-08-30T15:59:13.341Z"
      }
    }
  },
  "PATCH /api/comments/:comment_id": {
    "description": "update the votes on a comment given the comment's comment_id",
    "queries": [],
    "requestBody": {
      "inc_votes": "number"
    },
    "exampleResponse": {
      "comment": {
        "comment_id": 5,
        "body": "Quod qui...",
        "article_id": 17,
        "author": "weegembump",
        "votes": -3,
        "created_at": "2020-04-03T20:17:00.000Z"
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "Deletes a comment and sends no body back",
    "queries": [],
    "exampleResponse": "No Content with 204 status"
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "exampleResponse": {
      "users": [
        {
          "username": "rogersop",
          "name": "paul",
          "avatar_url": "https://avatars2.githubusercontent.com/u/24394918?s=400&v=4"
        }
      ]
    }
  },
  "GET /api/users/:username": {
    "description": "serves an object of a user",
    "queries": [],
    "exampleResponse": {
      "user": {
        "username": "rogersop",
        "avatar_url": "https://avatars2.githubusercontent.com/u/24394918?s=400&v=4",
        "name": "paul"
      }
    }
  }
}
